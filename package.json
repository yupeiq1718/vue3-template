{
  "name": "vue3-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "build:gh-pages": "vite build --mode gh-pages",
    "dev": "vite",
    "dev:gh-pages": "vite --mode gh-pages",
    "prepare": "husky install && husky add .husky/commit-msg \"npx --no -- commitlint --edit $1\" && husky add .husky/pre-merge-commit \"yarn lint:script && yarn lint:style\" && husky add .husky/pre-push \"yarn lint:script && yarn lint:style\" && husky add .husky/pre-commit \"yarn lint:script && yarn lint:style\"",
    "preview": "vite preview",
    "lint:script": "eslint src --fix --ext .ts,.tsx,.vue,.js,.jsx",
    "lint:style": "stylelint  src/**/*.{vue,scss,css,sass,less} --fix"
  },
  "dependencies": {
    "@commitlint/cli": "~16.2.3",
    "@commitlint/config-conventional": "~16.2.1",
    "autoprefixer": "~10.4.7",
    "eslint": "~8.25.0",
    "postcss": "~8.4.14",
    "postcss-html": "~1.4.1",
    "postcss-import": "~14.1.0",
    "postcss-nesting": "~10.1.10",
    "sass": "~1.53.0",
    "stylelint": "~14.9.1",
    "stylelint-config-html": "~1.0.0",
    "stylelint-config-recommended-vue": "~1.4.0",
    "stylelint-config-standard": "~26.0.0",
    "stylelint-config-standard-scss": "~4.0.0",
    "stylelint-order": "~5.0.0",
    "tailwindcss": "~3.1.4",
    "unplugin-auto-import": "~0.9.3",
    "unplugin-vue-components": "~0.21.1",
    "vite-plugin-compression": "~0.5.1",
    "vite-plugin-pages": "^0.28.0",
    "vite-plugin-remove-console": "~1.1.0",
    "vite-plugin-svg-icons": "~2.0.1",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vue": "~3.2.25",
    "vue-axios": "~3.4.1",
    "vue-router": "~4.0.16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "~5.16.0",
    "@typescript-eslint/parser": "~5.16.0",
    "@vitejs/plugin-vue": "~2.3.3",
    "axios": "~0.21.4",
    "eslint-config-standard": "~16.0.3",
    "eslint-plugin-import": "~2.25.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-vue": "~8.5.0",
    "husky": "~8.0.0",
    "typescript": "~4.5.4",
    "vite": "~3.0.4",
    "vue-tsc": "^1.0.9"
  }
}
